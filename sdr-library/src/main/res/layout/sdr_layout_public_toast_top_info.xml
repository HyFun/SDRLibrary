<?xml version="1.0" encoding="utf-8"?>
<com.sdr.lib.widget.RoundFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:radius="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="15dp">

        <ImageView
            android:id="@+id/sdr_public_toast_iv_image"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/sdr_public_toast_tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="10dp"
            tools:text="在前面几篇文章中，都有出现过这个LayoutParams"
            android:singleLine="true"/>
    </LinearLayout>
</com.sdr.lib.widget.RoundFrameLayout>