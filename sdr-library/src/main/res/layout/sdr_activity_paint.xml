<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

    <com.sdr.lib.widget.SquareFramLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <com.sdr.lib.widget.PaintView
            android:id="@+id/sdr_paint_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.sdr.lib.widget.SquareFramLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sdr_paint_iv_undo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/sdr_ic_undo_black_24dp"
            android:layout_marginRight="10dp"
            android:tint="#ffffff" />
        <ImageView
            android:id="@+id/sdr_paint_iv_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/sdr_ic_clear_black_24dp"
            android:tint="#ffffff" />
        <ImageView
            android:id="@+id/sdr_paint_iv_redo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/sdr_ic_redo_black_24dp"
            android:tint="#ffffff" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/sdr_paint_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="保存" />


    </LinearLayout>
</FrameLayout>