<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333">
    <FrameLayout
        android:id="@+id/qr_scan_frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/qr_scan_operate_container"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <ImageView
                android:id="@+id/qr_scan_operate_iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="10dp"
                android:background="?selectableItemBackground"
                android:src="@drawable/qrcode_ic_close_black_24dp"/>

            <ImageView
                android:id="@+id/qr_scan_operate_iv_flash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="10dp"
                android:background="?selectableItemBackground"
                android:src="@drawable/qrcode_ic_flash_off_black_24dp"/>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>

