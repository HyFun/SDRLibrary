<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="buttonStyle">@style/ButtonStyle</item>

        <item name="android:windowAnimationStyle">@style/ActivitySlideAnimation</item>
    </style>

    <style name="AppTheme.ScaleTheme">
        <item name="android:windowAnimationStyle">@style/ActivityScanAnimation</item>
    </style>


    <!--button的样式-->
    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/selector_button_bg</item>
    </style>
</resources>
